puts "Math Operations in Tcl"

# Addition
puts "5 + 3 = [expr 5 + 3]" ;# Output: 8

# Subtraction
puts "10 - 4 = [expr 10 - 4]" ;# Output: 6

# Multiplication
puts "6 * 7 = [expr 6 * 7]" ;# Output: 42

# Division
puts "20 / 5 = [expr 20 / 5]" ;# Output: 4

# Division with float
puts "7.0 / 2 = [expr 7.0 / 2]" ;# Output: 3.5

# Modulus
puts "10 % 3 = [expr 10 % 3]" ;# Output: 1

# Exponentiation
puts "2 ** 3 = [expr 2 ** 3]" ;# Output: 8

# Square root
puts "sqrt(16) = [expr sqrt(16)]" ;# Output: 4.0

# Absolute value
puts "abs(-5) = [expr abs(-5)]" ;# Output: 5

# Maximum
puts "max(3, 7) = [expr max(3, 7)]" ;# Output: 7

# Minimum
puts "min(3, 7) = [expr min(3, 7)]" ;# Output: 3

# Trigonometric functions
puts "sin(0) = [expr sin(0)]" ;# Output: 0.0
puts "cos(0) = [expr cos(0)]" ;# Output: 1.0

# Logarithm (natural log)
puts "log(1) = [expr log(1)]" ;# Output: 0.0

# Combined expression
puts "((5 + 3) * 2) / 4 = [expr ((5 + 3) * 2) / 4]" ;# Output: 4
